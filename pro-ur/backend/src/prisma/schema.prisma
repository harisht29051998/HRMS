// Schema for Pro-UR Task Management System

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                    String       @id @default(cuid())
  email                 String       @unique
  password              String
  firstName             String
  lastName              String
  avatar                String?
  createdAt             DateTime     @default(now())
  updatedAt             DateTime     @updatedAt
  organizationMemberships OrganizationMembership[]
  tasksAssigned         Task[]
  comments              Comment[]
  refreshToken          RefreshToken?
  auditLogs             AuditLog[]
}

model Organization {
  id          String                  @id @default(cuid())
  name        String
  slug        String                  @unique
  logo        String?
  createdAt   DateTime                @default(now())
  updatedAt   DateTime                @updatedAt
  members     OrganizationMembership[]
  projects    Project[]
  rules       AutomationRule[]
  recurringTasks RecurringTask[]
  auditLogs   AuditLog[]
}

model OrganizationMembership {
  id             String   @id @default(cuid())
  userId         String
  organizationId String
  role           Role     @default(MEMBER)
  joinedAt       DateTime @default(now())
  user           User     @relation(fields: [userId], references: [id], onDelete: Restrict, onUpdate: Cascade)
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Restrict, onUpdate: Cascade)
  
  @@unique([userId, organizationId])
}

enum Role {
  ADMIN
  MEMBER
}

model Project {
  id              String     @id @default(cuid())
  title           String
  description     String?
  color           String     @default("#3B82F6")
  createdAt       DateTime   @default(now())
  updatedAt       DateTime   @updatedAt
  organizationId  String
  sections        Section[]
  tasks           Task[]
  organization    Organization @relation(fields: [organizationId], references: [id], onDelete: Restrict, onUpdate: Cascade)
  auditLogs       AuditLog[]
}

model Section {
  id          String   @id @default(cuid())
  title       String
  position    Int      @default(0)
  projectId   String
  tasks       Task[]
  project     Project @relation(fields: [projectId], references: [id], onDelete: Restrict, onUpdate: Cascade)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  auditLogs   AuditLog[]
}

model Task {
  id            String     @id @default(cuid())
  title         String
  description   String?
  priority      Priority?  @default(NORMAL)
  status        Status?    @default(TODO)
  dueDate       DateTime?
  completedAt   DateTime?
  assigneeId    String?
  position      Int        @default(0)
  sectionId     String
  projectId     String
  subtasks      Subtask[]
  comments      Comment[]
  attachments   Attachment[]
  section       Section @relation(fields: [sectionId], references: [id], onDelete: Restrict, onUpdate: Cascade)
  project       Project @relation(fields: [projectId], references: [id], onDelete: Restrict, onUpdate: Cascade)
  assignee      User?     @relation(fields: [assigneeId], references: [id], onDelete: SetNull, onUpdate: Cascade)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  auditLogs     AuditLog[]
}

enum Priority {
  LOW
  NORMAL
  HIGH
  URGENT
}

enum Status {
  TODO
  IN_PROGRESS
  REVIEW
  DONE
}

model Subtask {
  id        String   @id @default(cuid())
  title     String
  completed Boolean  @default(false)
  taskId    String
  task      Task     @relation(fields: [taskId], references: [id], onDelete: Restrict, onUpdate: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Comment {
  id         String   @id @default(cuid())
  content    String
  authorId   String
  taskId     String
  author     User     @relation(fields: [authorId], references: [id], onDelete: Restrict, onUpdate: Cascade)
  task       Task     @relation(fields: [taskId], references: [id], onDelete: Restrict, onUpdate: Cascade)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  auditLogs  AuditLog[]
}

model Attachment {
  id         String   @id @default(cuid())
  filename   String
  url        String
  size       Int
  type       String
  taskId     String
  uploadedBy String
  task       Task     @relation(fields: [taskId], references: [id], onDelete: Restrict, onUpdate: Cascade)
  uploader   User     @relation(fields: [uploadedBy], references: [id], onDelete: Restrict, onUpdate: Cascade)
  createdAt  DateTime @default(now())
  auditLogs  AuditLog[]
}

model AutomationRule {
  id               String              @id @default(cuid())
  name             String
  description      String?
  triggerEvent     TriggerEvent
  conditions       Json
  actions          Json
  enabled          Boolean             @default(true)
  organizationId   String
  organization     Organization        @relation(fields: [organizationId], references: [id], onDelete: Restrict, onUpdate: Cascade)
  createdAt        DateTime            @default(now())
  updatedAt        DateTime            @updatedAt
  auditLogs        AuditLog[]
}

enum TriggerEvent {
  TASK_CREATED
  TASK_UPDATED
  TASK_ASSIGNED
  TASK_COMPLETED
  TASK_MOVED
}

model RecurringTask {
  id               String              @id @default(cuid())
  name             String
  description      String?
  schedule         String              // Cron expression
  nextRunAt        DateTime
  lastRunAt        DateTime?
  enabled          Boolean             @default(true)
  organizationId   String
  organization     Organization        @relation(fields: [organizationId], references: [id], onDelete: Restrict, onUpdate: Cascade)
  createdAt        DateTime            @default(now())
  updatedAt        DateTime            @updatedAt
  auditLogs        AuditLog[]
}

model RefreshToken {
  id        String   @id @default(cuid())
  token     String   @unique
  userId    String
  expiresAt DateTime
  revoked   Boolean  @default(false)
  user      User     @relation(fields: [userId], references: [id], onDelete: Restrict, onUpdate: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model AuditLog {
  id          String       @id @default(cuid())
  action      String
  entityType  String
  entityId    String
  userId      String?
  organizationId String?
  projectId   String?
  taskId      String?
  oldValues   Json?
  newValues   Json?
  ipAddress   String?
  userAgent   String?
  createdAt   DateTime     @default(now())
  user        User?        @relation(fields: [userId], references: [id], onDelete: SetNull, onUpdate: Cascade)
  organization Organization? @relation(fields: [organizationId], references: [id], onDelete: SetNull, onUpdate: Cascade)
  project     Project?     @relation(fields: [projectId], references: [id], onDelete: SetNull, onUpdate: Cascade)
  task        Task?        @relation(fields: [taskId], references: [id], onDelete: SetNull, onUpdate: Cascade)
}